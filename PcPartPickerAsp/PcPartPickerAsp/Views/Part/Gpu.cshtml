@using PcPartPickerAsp.DAL.Models
@model PcPartPickerAsp.DAL.ViewModels.GpuViewModel
@{
    ViewBag.Title = "Gpu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cpu</h2>

<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Clock speed</th>
                        <th>Vram</th>
                        <th>Price</th>
                    </tr>
                </thead>

                <tbody id="myTable">
                    @foreach (Gpu c in @Model.AllGpus)
                    {
                        
                            <tr>
                                <td>@c.Name</td>
                                <td>@c.Clockspeed</td>
                                <td>@c.Vram</td>
                                <td>@c.Price</td>
                                <td>
                                    @using (Html.BeginForm("EditGpu", "Build"))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("computerId", Model.CurrentBuild.ComputerId)
                                        @Html.Hidden("gpuId", c.GpuId)
                                        <input type="submit" value="Pick" class="btn btn-default" />
                                    }
                                </td>
                            </tr>
                        
                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-12 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
        </div>
    </div>
</div>
